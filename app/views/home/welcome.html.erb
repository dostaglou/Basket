<h1>Home#welcome</h1>
<% @basket_items.each do |item| %>
  <div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
        <%= image_tag(item.image_name, class: "img-fluid rounded-start") %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <div class="d-flex flex-row justify-content-between">
            <div class="card-text">
              <h5 class="card-title"><%= item.name %></h5>
              <p class="align-self-center m-0"><small>( <%= "#{item.quantity} x #{item.measure}" %> )</small></p>
            </div>
            <div class="card-text">
              <p class="card-text m-0"><small>Updated:</small></p>
              <p class="card-text m-0"><small><%= time_ago_in_words(item.updated_at) %></small></p>
            </div>
          </div>
          <div class="d-flex flex-row justify-content-between align-items-center">
            <% if item.id.even? %>
              <%= link_to "Pickup", "#", class: "btn border-primary w-100" %>
            <% else %>
              <%= link_to "Mark Pending", "#", class: "btn border-warning w-100" %>
            <% end %>
          </div>
          <p class="card-text" style="max-height: 4.5em; overflow: hidden"><%= item.note %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>

