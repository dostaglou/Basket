<div class="modal fade" id="sign-out-confirm-modal" tabindex="-1" aria-labelledby="sign-out-confirm-modal-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="sign-out-confirm-modal-label">Sign Out</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= turbo_frame_tag 'sign-out-confirm-form', target: '_top' do  %>
          <p class="alert"><%= alert %></p>
          <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
