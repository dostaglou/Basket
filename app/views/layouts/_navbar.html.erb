<nav class="bg-slate-100 border-gray-200" data-controller="display" data-display-hidden-class="hidden">
  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
    <%= link_to root_path do  %>
      <div class="flex items-center">
        <%= image_tag("shopping-venture.png", width: 50) %>
        <span>Welcome<%= ", #{current_user&.first_name}" if current_user.present? %>!</span>
      </div>
    <% end %>

    <button class="md:hidden" data-action="click->display#toggle">
      <svg viewBox="0 0 100 80" width="2em" height="2em">
        <rect y="10" width="100" height="5"></rect>
        <rect y="30" width="100" height="5"></rect>
        <rect y="50" width="100" height="5"></rect>
      </svg>
    </button>

    <div data-display-target="section" class="hidden w-full flex flex-col items-center mt-2 md:mt-0 border-t-2 md:border-0 md:inline-flex md:flex-row md:flex-grow md:w-fit md:flex-wrap md:justify-end">
        <% if current_user %>
          <div class="flex flex-row justify-between w-4/5 md:w-fit mt-3 md:mt-0">
            <%= link_to "Baskets", baskets_path, class: "w-2/4 md:w-fit text-gray-500 hover:text-slate-950 text-center md:px-3" %>
            <%= link_to "Share Basket", baskets_path, data: { turbo_frame: "new_basket_item" }, class: "w-2/4 md:w-fit text-gray-500 hover:text-slate-950 text-center md:px-3 md:hidden" %>
          </div>
          <div class="flex flex-row justify-between w-4/5 md:w-fit mt-3 md:mt-0">
            <%= link_to "Basket Items", basket_items_path, class: "w-2/4 md:w-fit text-gray-500 hover:text-slate-950 text-center md:px-3" %>
            <%= link_to "Add Basket Item", new_basket_item_path, data: { turbo_frame: "new_basket_item" }, class: "w-2/4 md:w-fit text-gray-500 hover:text-slate-950 text-center md:px-3 md:hidden" %>
          </div>
          <div class="flex flex-row justify-between w-4/5 md:w-fit mt-3 md:mt-0">
            <%= link_to "Friends", baskets_path, data: { turbo_frame: "new_basket_item" }, class: "w-2/4 md:w-fit text-gray-500 hover:text-slate-950 text-center md:px-3" %>
